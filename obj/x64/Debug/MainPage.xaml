<Page x:ConnectionId='1'
    x:Class="ControlBrazoBluetooth.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Page.Resources>
        <CollectionViewSource x:ConnectionId='2' x:Name="PairedDevices"/>
    </Page.Resources>
    <ScrollViewer HorizontalScrollMode="Enabled" HorizontalScrollBarVisibility="Auto" >
        <Grid x:ConnectionId='3' x:Name="Layout">
            <Grid.Background>
                <SolidColorBrush Color="WhiteSmoke"/>
            </Grid.Background>

            <StackPanel Orientation="Vertical">
                <TextBlock x:ConnectionId='4' x:Name="MyTitle" HorizontalAlignment="Left" Margin="50,20" Style="{ThemeResource TitleTextBlockStyle}" TextWrapping="Wrap" Text="Control Brazo Robótico Bluetooth" VerticalAlignment="Top" Width="800"/>
                <StackPanel Orientation="Vertical" Margin="50,0">
                    <StackPanel Orientation="Horizontal" Visibility="Collapsed">
                        <TextBlock x:ConnectionId='25' x:Name="ID" HorizontalAlignment="Left" Height="23" Margin="10" TextWrapping="Wrap" Text="Id: " VerticalAlignment="Top" Width="28"/>
                        <TextBlock x:ConnectionId='26' x:Name="TxtBlock_SelectedID" HorizontalAlignment="Left" Height="25" Margin="10" TextWrapping="Wrap" Text="Id" VerticalAlignment="Top" Width="956"/>
                    </StackPanel>
                    <Grid >
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <TextBlock x:ConnectionId='21' x:Name="BTName" Grid.Column="0" Grid.Row="0" HorizontalAlignment="Left" Height="23" Margin="10,10,10,0" TextWrapping="Wrap" Text="Dispositivo: " VerticalAlignment="Top" Width="80"/>
                        <TextBlock x:ConnectionId='22' x:Name="textBlockBTName" Grid.Column="1" Grid.Row="0" HorizontalAlignment="Left" Height="35" Margin="10,10,0,0" TextWrapping="Wrap" Text="Ninguno" VerticalAlignment="Top" Width="auto" ToolTipService.ToolTip=""/>
                        <Grid Grid.Column="2" Grid.Row="0" Grid.RowSpan="2" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,0,10,0">
                            <StackPanel>
                                <TextBlock Text="Alumno: Urquiza Martinez, Jonatán Ezequiel" HorizontalAlignment="Right"/>
                                <TextBlock Text="Materia: Procesadores II - Interfaces" HorizontalAlignment="Right"/>
                                <TextBlock Text="Prof: Ing. Roberto Martin Murdocca" HorizontalAlignment="Right"/>
                                <TextBlock Text="Univerisidad Nacional de San Luis" HorizontalAlignment="Right" FontWeight="SemiBold"/>
                            </StackPanel>
                        </Grid>
                        <Image Source="/Assets/LOGOUNSL.png" Grid.Column="3" Grid.Row="0" Grid.RowSpan="2" Height="80"  Margin="0,0,10,0"  HorizontalAlignment="Right"/>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,0" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2">
                            <Button x:ConnectionId='23' x:Name="buttonRefresh" Content="Actualizar" HorizontalAlignment="Left" Height="49" Margin="10" VerticalAlignment="Top" Width="102"                      IsEnabled="True"/>
                            <Button x:ConnectionId='24' x:Name="buttonDisconnect" Content="Desconectar" HorizontalAlignment="Left" Height="49" Margin="10" VerticalAlignment="Top" Width="102"                      IsEnabled="False"/>
                        </StackPanel>
                    </Grid>

                </StackPanel>

                <ListBox x:ConnectionId='5'  x:Name="ConnectDevices" ItemsSource="{Binding Source={StaticResource PairedDevices}}" Background="White" Margin="60,0,60,0"                                            
                    Width="Auto"
                    Height="Auto"
                    >
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Name}" Margin="0" />
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
                <StackPanel Orientation="Horizontal" Visibility="Collapsed">
                    <TextBlock x:ConnectionId='19' x:Name="SendText" HorizontalAlignment="Left" Height="23" Margin="10" TextWrapping="NoWrap"  Text="Send: " VerticalAlignment="Top" Width="50"/>
                    <TextBox x:ConnectionId='20' x:Name="TextBoxSendText" Text="Send Me" HorizontalAlignment="Left" Height="100" Margin="10" TextWrapping="Wrap"  VerticalAlignment="Top" Width="800" ToolTipService.ToolTip="" AcceptsReturn="True"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Visibility="Collapsed">
                    <TextBlock x:ConnectionId='17' x:Name="RecvdText" HorizontalAlignment="Left" Height="23" Margin="10" TextWrapping="NoWrap" Text="Recvd: " VerticalAlignment="Top" Width="50"/>
                    <TextBlock x:ConnectionId='18' x:Name="TextBoxRecvdText" HorizontalAlignment="Left" Margin="10" TextWrapping="Wrap" Text="Name" VerticalAlignment="Top" Width="800" Height="Auto" ToolTipService.ToolTip=""/>
                </StackPanel>
                <Grid Margin="50,0,50,0" HorizontalAlignment="Stretch">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid Grid.Column="0">
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <Button x:ConnectionId='13' x:Name="LeftUpButton" IsEnabled="False" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" HorizontalAlignment="Center" Height="70" Width="70" Margin="10" >
                            <SymbolIcon Symbol="Up"/>
                        </Button>
                        <Button x:ConnectionId='14' x:Name="LeftLeftButton" Grid.Row="1" IsEnabled="False" Grid.Column="0" Height="70" Width="70"  Margin="20,20,40,20" HorizontalAlignment="Right">
                            <SymbolIcon Symbol="Back"/>
                        </Button>
                        <Button x:ConnectionId='15' x:Name="LeftRightButton" Grid.Row="1" IsEnabled="False"  Grid.Column="1" Height="70" Width="70"  Margin="40,20,20,20" >
                            <SymbolIcon Symbol="Forward"/>
                        </Button>
                        <Button x:ConnectionId='16' x:Name="LeftDownButton" Grid.Row="2" IsEnabled="False" Grid.Column="0" Grid.ColumnSpan="2" HorizontalAlignment="Center" Height="70" Width="70" Margin="10" >
                            <SymbolIcon Symbol="Up" RenderTransformOrigin="0.5,0.5" >
                                <SymbolIcon.RenderTransform>
                                    <CompositeTransform Rotation="180"/>
                                </SymbolIcon.RenderTransform>
                            </SymbolIcon>
                        </Button>
                    </Grid>
                    <Grid Grid.Column="1">
                        <StackPanel>
                            <Slider x:ConnectionId='10' x:Name="Slider" IsEnabled="False" Maximum="75" Minimum="0" Margin="0,20,0,0"                                    ></Slider>
                            <Grid HorizontalAlignment="Center" Margin="0,25,0,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition/>
                                    <ColumnDefinition/>
                                </Grid.ColumnDefinitions>
                                <Button x:ConnectionId='11' x:Name="CenterLeftButton" IsEnabled="False" Grid.Column="0" Height="70" Width="70"  Margin="20,20,40,20" >
                                    <SymbolIcon Symbol="Back"/>
                                </Button>
                                <Button x:ConnectionId='12' x:Name="CenterRightButton" IsEnabled="False" Grid.Column="1" Height="70" Width="70"  Margin="40,20,20,20" >
                                    <SymbolIcon Symbol="Forward"/>
                                </Button>
                            </Grid>

                        </StackPanel>
                    </Grid>

                    <Grid Grid.Column="2">
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <Button x:ConnectionId='6' x:Name="RightUpButton" IsEnabled="False" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" HorizontalAlignment="Center" Height="70" Width="70" Margin="10" >
                            <SymbolIcon Symbol="Up"/>
                        </Button>
                        <Button x:ConnectionId='7' x:Name="RightLeftButton" IsEnabled="False" Grid.Row="1"  Grid.Column="0" Height="70" Width="70"  Margin="20,20,40,20" HorizontalAlignment="Right">
                            <SymbolIcon Symbol="Back"/>
                        </Button>
                        <Button x:ConnectionId='8' x:Name="RightRightButton" IsEnabled="False"  Grid.Row="1"  Grid.Column="1" Height="70" Width="70"  Margin="40,20,20,20">
                            <SymbolIcon Symbol="Forward"/>
                        </Button>
                        <Button x:ConnectionId='9' x:Name="RightDownButton" IsEnabled="False"  Grid.Row="2"  Grid.Column="0" Grid.ColumnSpan="2" HorizontalAlignment="Center" Height="70" Width="70" Margin="10" >
                            <SymbolIcon Symbol="Up" RenderTransformOrigin="0.5,0.5" >
                                <SymbolIcon.RenderTransform>
                                    <CompositeTransform Rotation="180"/>
                                </SymbolIcon.RenderTransform>
                            </SymbolIcon>
                        </Button>
                    </Grid>
                </Grid>
            </StackPanel>

        </Grid>
    </ScrollViewer>
</Page>

